{
  "version": "2.1.0",
  "schema_version": "2.1",
  "global_settings": {
    "input_dir": "",
    "output_dir": "",
    "log_dir": "logs",
    "relative_base_path": ""
  },
  "session": {
    "first_launch": false,
    "window_geometry": "1304x764+111+41"
  },
  "app_defaults": {
    "default_mode": "bundle",
    "bundle_profile": "plain_marker",
    "add_headers": true,
    "encoding": "auto",
    "eol": "auto",
    "overwrite_policy": "prompt",
    "dry_run_default": true,
    "treat_binary_as_base64": true
  },
  "safety": {
    "allow_globs": [
      "**/*.py",
      "**/*.txt",
      "**/*.md",
      "**/*.toml",
      "**/*.json",
      "**/*.html",
      "**/*.css",
      "**/*.js",
      "**/*.bat",
      "**/*.sh",
      "cli.py",
      "Makefile",
      "requirements.txt",
      "pyproject.toml"
    ],
    "deny_globs": [
      "**/.git/**",
      "**/.git",
      "**/.venv/**",
      "**/.venv",
      "**/venv/**",
      "**/__pycache__/**",
      "**/__pycache__",
      "**/*.pyc",
      "**/*.pyo",
      "**/*.pyd",
      "**/.pytest_cache/**",
      "**/.pytest_cache",
      "**/htmlcov/**",
      "**/.coverage",
      "**/.coverage.*",
      "**/dist/**",
      "**/build/**",
      "**/*.egg-info/**",
      "**/.mypy_cache/**",
      "**/.tox/**",
      "**/*.log",
      "**/logs/**",
      "**/project.txt",
      "**/.vscode/**",
      "**/.idea/**",
      "**/.DS_Store",
      "**/node_modules/**"
    ],
    "max_file_mb": 10
  },
  "ui": {
    "layout": "middle",
    "show_info_panel": true,
    "show_log_panel": true
  }
}